{
  "name": "vscode-openapi",
  "displayName": "vscode-openapi",
  "description": "A VS Code extension for viewing, editing, and validating OpenAPI specs to streamline API development.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": ["Other"],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-openapi.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "build": "rimraf out && tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "biome lint --write",
    "format": "biome format --write",
    "check": "biome check --write",
    "test": "vscode-test",
    "prepare": "git config core.hooksPath .hooks && chmod +x .hooks/*"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "~22.15.29",
    "@types/vscode": "^1.100.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "lint-staged": "^16.1.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  }
}
