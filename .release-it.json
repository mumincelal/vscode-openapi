{
  "git": {
    "commitMessage": "chore: release v${version}",
    "pushArgs": ["--no-verify"],
    "commitArgs": ["--no-verify"]
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:git:push": "echo 'Pre-push hook custom command' && git push --no-verify || true",
    "before:git:commit": "echo 'Pre-commit hook custom command' && git commit --no-verify || true"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {}
        ]
      }
    }
  }
}
